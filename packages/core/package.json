{
    "name": "@entity-routes/core",
    "version": "0.1.8",
    "description": "Design your API around your entities in minutes",
    "source": "src/index.ts",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "exports": {
        "require": "./dist/cjs/index.js",
        "import": "./dist/esm/index.js",
        "default": "./dist/esm/index.js"
    },
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/entity-routes.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "license": "MIT",
    "scripts": {
        "test": "jest --runInBand --forceExit",
        "test:clear": "jest --clearCache",
        "test:watch": "jest --runInBand --passWithNoTests --forceExit --watch --no-watchman",
        "test:coverage": "jest --runInBand --passWithNoTests --forceExit --coverage",
        "dev": "ttsc --watch --incremental -p tsconfig.build.json --outDir dist/esm",
        "build:cjs": "ttsc -p tsconfig.build.json --outDir dist/cjs -m CommonJS",
        "build:esm": "ttsc -p tsconfig.build.json --outDir dist/esm",
        "build": "concurrently 'yarn:build:*'",
        "release": "standard-version",
        "prebuild": "rimraf dist",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test",
        "release-publish": "npm release && npm publish && git push --follow-tags origin main",
        "prettier": "prettier --write \"./{src,tests}/**/*.ts\"",
        "commit": "git-cz"
    },
    "dependencies": {
        "@astahmer/entity-validator": "^0.1.1",
        "@entity-routes/shared": "workspace:packages/shared",
        "class-validator": "^0.12.2",
        "reflect-metadata": "^0.1.13",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.26",
        "uuid": "^8.3.1"
    },
    "devDependencies": {
        "@entity-routes/test-sample": "workspace:packages/test-sample",
        "@entity-routes/test-utils": "workspace:packages/test-utils",
        "@types/concurrently": "^5",
        "@types/jest": "^26.0.16",
        "@types/prettier": "^2",
        "@types/rimraf": "^3",
        "@types/uuid": "^8.3.0",
        "axios": "^0.21.0",
        "commitizen": "^4.2.2",
        "concurrently": "^5.3.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-diff": "^26.6.2",
        "jest-extended": "^0.11.5",
        "openapi3-ts": "^2.0.0",
        "prettier": "^2.2.1",
        "prettier-plugin-sorted": "^2.0.0",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "sql.js": "^1.4.0",
        "standard-version": "^9.0.0",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.1.0",
        "ttypescript": "^1.5.12",
        "typescript": "^4.1.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": "^12.x"
    },
    "keywords": [
        "entity",
        "routes",
        "entity-routes",
        "api",
        "rest",
        "decorators",
        "typescript",
        "model",
        "typeorm",
        "koa",
        "express",
        "connect",
        "nextjs",
        "nuxt",
        "subresources"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
