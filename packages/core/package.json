{
    "name": "@entity-routes/core",
    "version": "0.1.8",
    "description": "Design your API around your entities in minutes",
    "source": "src/index.ts",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "exports": {
        "require": "./dist/cjs/index.js",
        "import": "./dist/esm/index.js",
        "default": "./dist/esm/index.js"
    },
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/entity-routes.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "license": "MIT",
    "scripts": {
        "test": "jest --runInBand --forceExit",
        "test:clear": "jest --clearCache",
        "test:watch": "jest --runInBand --forceExit --watch --no-watchman",
        "test:coverage": "jest --coverage --runInBand --forceExit",
        "dev": "ttsc --watch --incremental -p tsconfig.build.json --outDir dist/esm",
        "build:cjs": "ttsc -p tsconfig.build.json --outDir dist/cjs -m CommonJS",
        "build:esm": "ttsc -p tsconfig.build.json --outDir dist/esm",
        "build": "concurrently 'yarn:build:*'",
        "start": "node -r ts-node/register dist/cjs/index",
        "release": "standard-version",
        "prebuild": "rimraf dist",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test",
        "release-publish": "npm release && npm publish && git push --follow-tags origin main",
        "prettier": "prettier --write \"./{src,tests}/**/*.ts\"",
        "commit": "git-cz"
    },
    "dependencies": {
        "@astahmer/entity-validator": "^0.1.1",
        "class-validator": "^0.12.2",
        "express": "^4.17.1",
        "koa": "^2.13.0",
        "reflect-metadata": "^0.1.13",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.26",
        "uuid": "^8.3.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/koa": "^2.11.6",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-router": "^7.4.1",
        "@types/uuid": "^8.3.0",
        "axios": "^0.21.0",
        "body-parser": "^1.19.0",
        "koa-bodyparser": "^4.3.0",
        "koa-router": "^10.0.0",
        "openapi3-ts": "^2.0.0",
        "sql.js": "^1.4.0"
    },
    "peerDependencies": {
        "express": "^4.17.1",
        "koa": "^2.13.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": "^12.x"
    },
    "keywords": [
        "entity",
        "routes",
        "entity-routes",
        "api",
        "typescript",
        "model",
        "typeorm",
        "koa"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
