{
    "compilerOptions": {
        "lib": ["ES2020"],
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "@@/*": ["./*"]
        }
    },
    "include": ["./src"]
}
