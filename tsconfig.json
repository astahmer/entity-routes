{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "ES6",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "$/*": ["./*"]
        }
    },
    "exclude": ["./node_modules", "./dist", "./tests"]
}
