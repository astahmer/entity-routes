{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": false
    },
    "include": ["src", "scripts", "next-env.d.ts"],
    "exclude": ["node_modules"]
}
