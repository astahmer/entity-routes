{
    "name": "entity-routes",
    "private": true,
    "workspaces": {
        "packages": [
            "docs",
            "packages/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/entity-routes.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "license": "MIT",
    "scripts": {
        "each": "yarn workspaces foreach -pti run",
        "test": "yarn each test",
        "test:coverage": "yarn each test:coverage",
        "build": "yarn each build --exclude @entity-routes/docs --no-private",
        "dev": "yarn workspace @entity-routes/core dev",
        "docs:base": "yarn workspace @entity-routes/docs",
        "docs:dev": "yarn docs:base dev",
        "docs:start": "yarn docs:base start",
        "docs:build": "yarn docs:base build"
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@entity-routes/*"
                ]
            }
        }
    },
    "devDependencies": {
        "lerna": "^3.22.1"
    }
}
