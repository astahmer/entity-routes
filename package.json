{
    "name": "entity-routes",
    "private": true,
    "workspaces": {
        "packages": [
            "docs",
            "packages/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/entity-routes.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "license": "MIT",
    "scripts": {
        "test": "lerna run test --stream",
        "test:coverage": "lerna run test:coverage --stream",
        "build": "lerna run build --ignore @entity-routes/docs --no-private --stream",
        "dev": "yarn workspace @entity-routes/core dev",
        "start": "yarn workspace @entity-routes/core start",
        "docs:dev": "yarn workspace @entity-routes/docs dev",
        "docs:start": "yarn workspace @entity-routes/docs start",
        "docs:build": "yarn workspace @entity-routes/docs build"
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@entity-routes/*"
                ]
            }
        }
    },
    "devDependencies": {
        "@types/concurrently": "^5",
        "@types/jest": "^26.0.16",
        "@types/prettier": "^2",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "commitizen": "^4.2.2",
        "concurrently": "^5.3.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-diff": "^26.6.2",
        "jest-extended": "^0.11.5",
        "lerna": "^3.22.1",
        "prettier": "^2.2.1",
        "prettier-plugin-sorted": "^2.0.0",
        "pretty-quick": "^3.1.0",
        "standard-version": "^9.0.0",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "ttypescript": "^1.5.12",
        "typescript": "^4.1.2"
    }
}
